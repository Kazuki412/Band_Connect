<h3 class="my-3">投稿一覧</h3>
<table class="table">
  <thead style="background-color: #474343; color: white;">
    <tr>
      <th>画像</th>
      <th>アカウント名</th>
      <th>投稿内容</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
    <tr>
      <td><%= image_tag post.user.get_profile_image, size: "50x50" %></td>
      <td><%= link_to post.user.name, admin_user_path(post.user.id) %></td>
      <td><%= post.body %></td>
      <td><%= link_to "削除", admin_post_path(post.id), method: :delete, data: {confirm: "ポストを削除します"}, class: "btn btn-danger" %></td>
    </tr>
    <% end %>
  </tbody>
</table>