<h5><%= @user.name %>'s page</h5>
<div><%= link_to "New Post", new_public_post_path, class: "btn btn-primary" %></div>
<div><%= link_to "New Band", new_public_band_path, class: "btn btn-primary" %></div>
<table class="table">
  <tr><%= image_tag @user.get_profile_image, size: "100x100" %></tr>
  <tr>
    <th>name</th>
    <th><%= @user.name %></th>
  </tr>
  <tr>
    <th>Belongs to band</th>
  <% if @user.bands.blank? %>
    <th>未加入</th>
  <% else %>
    <th><%= @user.bands.pluck(:name).join("　") %></th>
  <% end %>
  </tr>
  <tr>
    <th>musical instrument in charge</th>
    <th><%= @user.musical_instrument.name %></th>
  </tr>
  <tr>
    <th>motivation</th>
    <th><%= @user.motivation.name %></th>
  </tr>
  <tr>
    <th>introduction</th>
    <th><%= @user.introduction %></th>
  </tr>
</table>
<%= link_to "プロフ編集(いずれアイコンにします)", edit_public_user_path(@user), class: "btn btn-success" %>
