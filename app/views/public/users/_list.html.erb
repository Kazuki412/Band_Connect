<table class="table">
  <thead style="background-color: #474343; color: white;">
    <tr>
      <th>User Infomation</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
    <% if user.is_active == true %>
      <tr>
        <td><%= image_tag user.get_profile_image, size: "50x50" %><br><%= link_to user.name, public_user_path(user) %></td>
        <td><%= user.musical_instrument&.name %></td>
        <td><%= user.motivation&.name %></td>
        <td><%= user.introduction %></td>
      </tr>
    <% end %>
  <% end %>
  </tbody>
</table>
<div class="item_paginate">
  <%= paginate users %>
</div>
<style>
  .item_paginate {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
  }
  .pagination {
    text-align: center;
    width: 50px;
    font-size: 20px;
  }
  .pagination span {
    text-align: center;
    width: 50px;
    font-size: 20px;
  }
  .pagination a {
    color: #818181;
    display: block;
    width: 100%;
    height: 100%;
    padding: 10px;
  }
  .pagination a:hover{
    width: 50px;
    height: 50px;
    background-color: #474343;
    color: #FFF;
    border-radius: 100%;
    padding: 10px;
  }
  .current{
    font-weight: bold;
    color: #474343;
    padding: 10px;
  }
</style>