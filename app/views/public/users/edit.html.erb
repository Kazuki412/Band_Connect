<h3 class="my-3"><i class="fa-regular fa-face-smile"></i> 登録内容編集 <i class="fa-regular fa-face-smile"></i></h3>
<div style="text-align: center;">
  <%= form_with model: @user, url: public_user_path(@user), method: :patch do |f| %>
  <!--画像-->
    <div class="form-group">
      <i class="fa-solid fa-paperclip"></i> <%= f.label :profile_image, "アカウント画像" %> <i class="fa-solid fa-paperclip"></i><br>
      <%= f.file_field :profile_image, accept: "image/*" %>
    </div>
  <!--名前-->
    <div class="form-group">
      <i class="fa-solid fa-user"></i> <%= f.label :name, "アカウント名" %> <i class="fa-solid fa-user"></i>
      <%= f.text_field :name, class: "form-control name" %>
    </div>
  <!--担当楽器-->
    <div class="form-group">
      <i class="fa-solid fa-music"></i> <%= f.label :musical_instrument_id, "担当楽器" %> <i class="fa-solid fa-music"></i><br>
      <%= f.collection_select :musical_instrument_id, MusicalInstrument.all, :id, :name, include_blank: "--選択してください--" %>
    </div>
  <!--モチベ-->
    <div class="form-group">
      <i class="fa-solid fa-lightbulb"></i> <%= f.label :motivation_id, "活動頻度" %> <i class="fa-solid fa-lightbulb"></i><br>
      <%= f.collection_select :motivation_id, Motivation.all, :id, :name, include_blank: "--選択してください--" %>
    </div>
  <!--自己紹介-->
    <div class="form-group">
      <i class="fa-solid fa-circle-info"></i> <%= f.label :introduction, "自己紹介" %> <i class="fa-solid fa-circle-info"></i>
      <%= f.text_area :introduction, class: "form-control introduction" %>
    </div>

    <div class="form-group">
      <%= f.submit "Save", class: "btn btn-success btn-block" %>
    </div>
  <% end %>
</div>
