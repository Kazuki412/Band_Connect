<h3 class="my-3">User Edit</h3>
<%= form_with model: @user, url: public_user_path(@user), method: :patch do |f| %>
<!--画像-->
  <div class="form-group">
    <%= f.label :profile_image, "プロフ画像" %>
    <%= f.file_field :profile_image, class: "form-control-file user_image", accept: "image/*" %>
  </div>
<!--名前-->
  <div class="form-group">
    <%= f.label :name, "アカウント名" %>
    <%= f.text_field :name, class: "form-control name" %>
  </div>
<!--担当楽器-->
  <div class="form-group">
    <%= f.label :musical_instrument, "担当" %><br>
    <%= f.collection_select :musical_instrument_id, MusicalInstrument.all, :id, :name, include_blank: "--選択してください--" %>
  </div>
<!--モチベ-->
  <div class="form-group">
    <%= f.label :motivation, "活動頻度" %><br>
    <%= f.collection_select :motivation_id, Motivation.all, :id, :name, include_blank: "--選択してください--" %>
  </div>
<!--自己紹介-->
  <div class="form-group">
    <%= f.label :introduction, "自己紹介" %>
    <%= f.text_area :introduction, class: "form-control introduction" %>
  </div>

  <div class="form-group">
    <%= f.submit "Save", class: "btn btn-success btn-block" %>
  </div>
<% end %>
