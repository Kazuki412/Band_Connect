<h3 class="my-3">Create Band</h3>
<%= form_with model: @band, url: public_bands_path, method: :post do |f| %>
  <div class="form-group">
    <%= f.label :band_image, "バンド画像" %>
    <%= f.file_field :band_image, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :name, "バンド名" %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :genre, "バンドジャンル" %><br>
    <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "--選択してください--" %>
  </div>
  <div class="form-group">
    <%= f.label :introduction, "バンド紹介" %>
    <%= f.text_area :introduction, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit "Create Band", class: "btn btn-primary btn-block" %>
  </div>
<% end %>