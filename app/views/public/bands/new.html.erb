<h3 class="my-3"><i class="fa-solid fa-music"></i> 新規バンド作成</h3>
<div style="text-align: center;">
  <%= form_with model: @band, url: public_bands_path, method: :post do |f| %>
    <div class="form-group">
      <i class="fa-solid fa-paperclip"></i> <%= f.label :band_image, "バンド画像" %> <i class="fa-solid fa-paperclip"></i><br>
      <%= f.file_field :band_image, accept: "image/*" %>
    </div>
    <div class="form-group">
      <i class="fa-solid fa-users"></i> <%= f.label :name, "バンド名" %> <i class="fa-solid fa-users"></i>
      <%= f.text_field :name, class: "form-control", placeholder: "バンド名" %>
    </div>
    <div class="form-group">
      <i class="fa-solid fa-music"></i> <%= f.label :genre_id, "バンドジャンル" %> <i class="fa-solid fa-music"></i><br>
      <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "--選択してください--" %>
    </div>
    <div class="form-group">
      <i class="fa-solid fa-circle-info"></i> <%= f.label :introduction, "バンド紹介" %> <i class="fa-solid fa-circle-info"></i>
      <%= f.text_area :introduction, class: "form-control", placeholder: "バンド紹介" %>
    </div>
    <div class="form-group">
      <%= f.submit "Create Band", class: "btn btn-primary btn-block" %>
    </div>
  <% end %>
</div>