<h1>Band Edit</h1>
<%= form_with model: @band, url: public_band_path(@band), method: :patch do |f| %>
  <div class="form-group">
    <%= f.label :band_image, "バンド画像" %>
    <%= f.file_field :band_image, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :name, "バンド名" %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :genre, "バンドジャンル" %>
    <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "--選択してください--" %>
  </div>
  <div class="form-group">
    <%= f.label :introduction, "バンド紹介" %>
    <%= f.text_area :introduction, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :status, "バンドステータス" %>
    <%= f.radio_button :band_status, "true" %>募集中
    <%= f.radio_button :band_status, "false" %>締切
  </div>
  <div class="form-group">
    <%= f.submit "Save", class: "btn btn-success" %>
  </div>
<% end %>
