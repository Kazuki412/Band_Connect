<div class="row">
  <div class="col-md-3">
    <h3 style="text-align: center; margin: 10px auto;"><%= @band.name %></h3>
    <table class="table">
      <tr><%= image_tag @band.get_band_image, size: "100x100", style: "display: block; margin: 15px auto;" %></tr>
      <tr>
        <th>name</th>
        <th><%= @band.name %></th>
      </tr>
      <tr>
        <th>genre</th>
        <th><%= @band.genre.name %></th>
      </tr>
      <tr>
        <th>member</th>
        <th><%= @band.users.count %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= @band.introduction %></th>
      </tr>
      <tr>
        <th>status</th>
      <% if @band.band_status == true %>
        <th>募集中</th>
      <% else %>
        <th>締切</th>
      <% end %>
      </tr>
    </table>
  <% if current_user.id == @band.owner_id %>
    <div>
      <%= link_to edit_public_band_path(@band), class: "btn btn-success btn-block" do %>
        <i class="fa-solid fa-gears"></i> 編集 <i class="fa-solid fa-gears"></i>
      <% end %>
    </div>
  <% end %>
  </div>
  <div class="col-md-8 offset-md-1">
    <%= render "button", band: @band %>
    <h5>Band_Member's</h5>
    <table class="table">
      <thead>
        <tr>
          <th>image</th>
          <th>name</th>
          <th>part</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @band.users.each do |user| %>
        <tr>
          <td><%= image_tag user.get_profile_image, size: "50x50" %></td>
          <td><%= link_to user.name, public_user_path(user.id) %></td>
          <td><%= user.musical_instrument.name %></td>
        <% if @band.owner_id == user.id %>
          <td><i class="fa-solid fa-people-group"></i> Leader <i class="fa-solid fa-people-group"></i></td>
        <% else %>
          <td></td>
        <% end %>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>