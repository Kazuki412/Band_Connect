<h5>Post Lists</h5>
<div><%= link_to "New Post", new_public_post_path, class: "btn btn-primary" %></div>
<table class="table">
  <thead>
    <tr>
      <th>Posts</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
    <tr>
      <td><%= image_tag post.user.get_profile_image, size: "50x50" %></td>
      <td><%= post.user.name %></td>
      <td><%= post.body %></td>
      <td>コメント数：<%= post.post_comments.count %></td>
      <td id="favorite_btn_<%= post.id %>">
        <%= render "public/favorites/favorite_btn", post: post %>
      </td>
      <td><%= link_to "To Edit", edit_public_post_path(post.id), class: "btn btn-success" %></td>
      <td><%= link_to "Destroy", public_post_path(post.id), method: :delete, data: { confirm: "削除しますか？" }, class: "btn btn-danger" %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<!--コメント数は吹き出しアイコンを使います-->