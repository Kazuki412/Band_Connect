<div class="search_form">
  <%= form_with url: public_search_path, method: :get, class: "d-flex" do |f| %>
    <%= f.text_field :word, class: "form-control", placeholder: "Search", required: true %>
    <%= f.select :model, options_for_select(["Band","Post","User"]) %>
    <%= f.hidden_field :search, value: "partial_match" %>
    <%= f.button :submit do %>
      <i class="fa-solid fa-magnifying-glass"></i>
    <% end %>
  <% end %>
</div>