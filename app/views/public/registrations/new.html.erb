<h2>New User Registration</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :name, "アカウント名" %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>

  <div class="field">
    <%= f.label :introduction, "自己紹介" %><br />
    <%= f.text_area :introduction, autofocus: true, autocomplete: "introduction" %>
  </div>

  <div class="field">
    <%= f.label :email, "メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, "パスワード（６文字以上）" %><br>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <h5>Activity</h5>
  <div class="field">
    <%= f.radio_button :motivation_id, Motivation.names.key(0), checked: true %>
    <%= f.label :motivation, Motivation.names_i18n[:professional] %>
  </div>

  <div class="field">
    <%= f.radio_button :motivation_id, Motivation.names.key(1) %>
    <%= f.label :motivation, Motivation.names_i18n[:amateur] %>
  </div>

  <div class="field">
    <%= f.radio_button :motivation_id, Motivation.names.key(2) %>
    <%= f.label :motivation, Motivation.names_i18n[:hobby] %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "public/shared/links" %>
