<%- if controller_name != 'sessions' %>
  <%= link_to "登録済の方はこちらへ", new_session_path(resource_name) %><br />
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "新規登録希望の方はこちらへ", new_registration_path(resource_name) %><br />
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "パスワードお忘れですか？", new_password_path(resource_name) %><br />
<% end %>

